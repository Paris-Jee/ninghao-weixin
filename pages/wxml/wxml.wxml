<view class="container vertical centered">
  <view>

    <form bindsubmit="formSubmit">

      <picker
        value="{{ pick }}"
        bindchange="inputHandler"
        name="picker"
        mode="region"
      >
        <view>
          <text>{{ pick }}</text>
        </view>
      </picker>

      <button form-type="submit">提交</button>

    </form>

  </view>
</view>
<view class="image">
  <image src="/assets/images/landscape.png"></image>
</view>
